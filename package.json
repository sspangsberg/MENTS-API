{
  "name": "ments-api",
  "version": "1.0.0",
  "description": "MongoDB Express Node TypeScript REST API",
  "main": "index.js",
  "scripts": {
    "build": "rm -rf ./dist && tsc",
    "start-dev": "cross-env NODE_ENV=development npx nodemon",
    "start-local": "cross-env NODE_ENV=local npx nodemon",
    "lint": "npx eslint",
    "seed": "npx ts-node ./src/util/dataSeeder.ts",
    "testdb": "cross-env NODE_ENV=test npx ts-node ./src/index.ts",
    "test": "npx playwright test --reporter=list"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sspangsberg/MENTS-API.git"
  },
  "author": "smsj",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/sspangsberg/MENTS-API/issues"
  },
  "homepage": "https://github.com/sspangsberg/MENTS-API#readme",
  "nodemonConfig": {
    "verbose": false,
    "watch": [
      "src"
    ],
    "ext": "js,ts",
    "exec": "npx ts-node ./src/index.ts",
    "ignore": [
      "node_modules"
    ]
  },
  "dependencies": {
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "dotenv-flow": "^4.1.0",
    "express": "^5.0.1",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "mongodb": "^6.12.0",
    "mongoose": "^8.9.5",
    "nodemon": "^3.1.9",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.21.0",
    "@faker-js/faker": "^9.6.0",
    "@playwright/test": "^1.51.0",
    "@stylistic/eslint-plugin": "^4.2.0",
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/joi": "^17.2.2",
    "@types/jsonwebtoken": "^9.0.8",
    "@types/node": "^22.10.6",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "eslint": "^9.21.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.26.0"
  }
}
